@model IEnumerable<VincKiralamaProjesi.Models.QuoteRequest>

@{
    ViewData["Title"] = "Gelen Teklifler (Admin)";
}

<h2>Gelen Teklifler</h2>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        Henüz hiç teklif talebi bulunmuyor.
    </div>
}
else
{
    <table class="table table-striped table-sm mt-3">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Müşteri</th>
                <th>Telefon</th>
                <th>Şehir / İlçe</th>
                <th>İş Türü</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@q.CustomerName</td>
                <td>@q.Phone</td>
                <td>@q.City @(" / ") @q.District</td>
                <td>@q.JobType</td>
                <td>
                    <a asp-action="Details" asp-route-id="@q.Id" class="btn btn-sm btn-primary">
                        Detay
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
